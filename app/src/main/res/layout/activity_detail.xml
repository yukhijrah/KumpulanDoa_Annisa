<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_detail_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ini Judul"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txt_detail_ayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Ini Ayat"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txt_detail_baca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Ini Bacaan" />

    <TextView
        android:id="@+id/txt_detail_arti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="0dp"
        android:text="ini Arti" />

</LinearLayout>
